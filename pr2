#include <iostream>
#include <cstdlib> // Для функції rand()
#include <ctime>   // Для функції time()

int main() {
    const int size = 5; // Розмір двовимірного масиву
    int matrix[size][size]; // Оголошення двовимірного масиву

    // Заповнення масиву випадковими значеннями
    srand(time(nullptr)); // Ініціалізація генератора випадкових чисел
    int *ptr = &matrix[0][0]; // Вказівник, що посилається на перший елемент масиву
    for (int i = 0; i < size * size; ++i) {
        *ptr++ = rand() % 100; // Заповнення елемента масиву випадковим числом
    }

    // Виведення елементів, що знаходяться на головній діагоналі
    ptr = &matrix[0][0]; // Переініціалізація вказівника
    std::cout << "Елементи головної діагоналі: ";
    for (int i = 0; i < size; ++i) {
        std::cout << *ptr << " ";
        ptr += size + 1; // Перехід до наступного елемента на головній діагоналі
    }
    std::cout << std::endl;

    // Виведення елементів, що знаходяться на побічній діагоналі
    ptr = &matrix[0][size - 1]; // Переініціалізація вказівника
    std::cout << "Елементи побічної діагоналі: ";
    for (int i = 0; i < size; ++i) {
        std::cout << *ptr << " ";
        ptr += size - 1; // Перехід до наступного елемента на побічній діагоналі
    }
    std::cout << std::endl;

    // Обчислення кількості парних та непарних елементів масиву
    ptr = &matrix[0][0]; // Переініціалізація вказівника
    int even_count = 0, odd_count = 0;
    for (int i = 0; i < size * size; ++i) {
        if (*ptr % 2 == 0) {
            ++even_count;
        } else {
            ++odd_count;
        }
        ++ptr; // Перехід до наступного елемента масиву
    }

    // Виведення кількості парних та непарних елементів масиву
    std::cout << "Кількість парних елементів: " << even_count << std::endl;
    std::cout << "Кількість непарних елементів: " << odd_count << std::endl;

    return 0;
}
